<%= form_for(@sherlock) do |f| %>
  <% if @sherlock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sherlock.errors.count, "error") %> prohibited this sherlock from being saved:</h2>

      <ul>
      <% @sherlock.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h2>Required</h2>
    <h4>The result must have ALL of these</h4>
		<% @features.each do |feature| %>
			<%= check_box("required", feature) %> - <%= feature.titleize %><br />
		<% end %>
  </div>

  <div class="field">
    <h2>Desired</h2>
    <h4>The result must have ONE or more of these</h4>
		<% @features.each do |feature| %>
			<%= check_box("desired", feature) %> - <%= feature.titleize %><br />
		<% end %>
  </div>

  <div class="field">
    <h2>Nots</h2>
    <h4>The result must have NONE of these</h4>
		<% @features.each do |feature| %>
			<%= check_box("nots", feature) %> - <%= feature.titleize %><br />
		<% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
